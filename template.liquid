<!-- OPTION SELECT TEMPLATE -->
<script type="text/template">
	var product_id = $('form.product-caption').attr('data-product-id');
</script>
<script type="text/template" data-template-id="option-default">
<% if (option.id == '1232822' || option.id == '1232823' || option.id == '1232824') { %>

<div class="size_options clearfix-xl">
<div class="title_options"><%= option.title %></div>
<% _.forEach(option.values, function (value){ %>
    <input 
      id="size-<%= value.id %>"
      type="radio"
      name="radio-<%= option.id %>"
      data-option-bind="<%= option.id %>"
      data-option-id="<%= value.position %>"
      data-value-id="<%= value.id %>"
      value="<%= value.position %>"
      <% if (value.available == false) { %> disabled<% } %>
      <% if (value.disabled) { %>disabled<% } %>
	  <% if ((option.selected == value.position & initOption)) { %>checked<% } %>
      >
  <label class="radio_label<% if (value.available == false) { %> disabled<% } %>" for="size-<%= value.id %>"><%= value.title %></label>
  <% }) %>
</div><!-- /.option-item -->
<% } else { %>
<div class="option-item option-<%= option.handle %> row middle-xl">
    <label class="cell-mc-12 cell-xl-3"><%= option.title %></label>
    <div class="cell-mc-12 cell-xl-4 cell-xs-8">
      <div class="select-wrapper select-styled">
        <select class="select-field" data-option-bind="<%= option.id %>">
          <% _.forEach(option.values, function (value){ %>
          <option data-value-position="<%= value.position %>" value="<%= value.position %>"<% if (option.selected == value.position & initOption) { %><% } %><% if (value.disabled) { %>disabled<% } %>><%= value.title %></option>
          <% }) %>
        </select>
      </div>
    </div>
  </div><!-- /.option-item -->
<% } %>
</script>
